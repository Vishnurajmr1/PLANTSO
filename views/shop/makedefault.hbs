<main>
  <!--====== Section 1 ======-->
    {{>user-profile-sidebar}}
  <!--====== End - Section 1 ======-->

  <!--====== Section 2 ======-->
  <div class="u-s-p-b-60">

    <!--====== Section Content ======-->
    <div class="section__content">
      <div class="dash">
        <div class="container">
          <div class="row">
            {{>account-detail-sidebar}}
            <div class="col-lg-9 col-md-12">
                {{#if success}}
                    <div class="alert alert-success">{{success}}</div>
                        {{/if}}
                        {{#if hasAddress}}
                                    <form class="dash__address-make">
                                        <div class="dash__box dash__box--shadow dash__box--bg-white dash__box--radius u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-p-xy-20">Make default Shipping Address</h2>
                                            <div class="dash__table-2-wrap gl-scroll">
                                                <table class="dash__table-2">
                                                    <thead>
                                                        <tr>
                                                            <th>Action</th>
                                                            <th>First Name</th>
                                                            <th>last Name</th>
                                                            <th>Address</th>
                                                            <th>Region</th>
                                                            <th>PostalCode</th>
                                                            <th>Phone Number</th>
                                                            <th>Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each Address}}
                                                        <tr>
                                                            <td>

                                                                <!--====== Radio Box ======-->
                                                                <div class="radio-box">

                                                                    <input type="radio" id="address-1" name="default-address" checked="">
                                                                    <div class="radio-box__state radio-box__state--primary">

                                                                        <label class="radio-box__label" for="address-1"></label></div>
                                                                </div>
                                                                <!--====== End - Radio Box ======-->
                                                            </td>
                                                            <td>{{fname}}</td>
                                                            <td>{{lname}}</td>
                                                            <td>{{street_address}}</td>
                                                            <td>{{countryName.name}}</td>
                                                            <td>{{zipcode}}</td>
                                                            <td>{{phone}}</td>
                                                            <td>
                                                                <div class="gl-text">Default Shipping Address</div>
                                                                <div class="gl-text">Default Billing Address</div>
                                                            </td>
                                                        </tr>
                                                        {{/each}}
                                                        {{!-- <tr>
                                                            <td>

                                                                <!--====== Radio Box ======-->
                                                                <div class="radio-box">

                                                                    <input type="radio" id="address-2" name="default-address">
                                                                    <div class="radio-box__state radio-box__state--primary">

                                                                        <label class="radio-box__label" for="address-2"></label></div>
                                                                </div>
                                                                <!--====== End - Radio Box ======-->
                                                            </td>
                                                            <td>Doe John</td>
                                                            <td>1484 Abner Road</td>
                                                            <td>Eau Claire WI - Wisconsin</td>
                                                            <td>(+0) 7154419563</td>
                                                            <td></td>
                                                        </tr> --}}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div>

                                            <button class="btn btn--e-brand-b-2" type="submit">SAVE</button></div>
                                    </form>
                                    {{else}}
                                                                        <!--======emptycart Section 1 ======-->
                                        <div class="u-s-p-y-60">

                                 <!--====== emptycartSection Content ======-->
                                <div class="section__content">
                                 <div class="container">
                                     <div class="row">
                             <div class="col-lg-12 col-md-12 u-s-m-b-30">
                                     <div class="empty">
                                     <div class="empty__wrap">

                                <span class="empty__big-text">No Address Found!</span>

                                <span class="empty__text-1">No saved address on this account.</span>

                <a
                  class="empty__redirect-link btn--e-brand"
                  href="/add-address"
                >Add New Address</a>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--====== End - emptycart Section Content ======-->
  </div>
  <!--====== End - emptycart Section 1 ======-->
                                    {{/if}}
                                </div>
          </div>
        </div>
      </div>
    </div>
    <!--====== End - Section Content ======-->
  </div>
  <!--====== End - Section 2 ======-->
</main>

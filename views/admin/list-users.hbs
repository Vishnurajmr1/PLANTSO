  } else {
    nameInput.classList.remove('error');
    nameError.textContent = '';
  }
}

function validateEmail() {
  const email = emailInput.value.trim();

  if (email === '') {
    emailInput.classList.add('error');
    emailError.textContent = 'Email field cannot be empty';
  } else {
    emailInput.classList.remove('error');
    emailError.textContent = '';
  }
}

function validatePhoneNumber() {
  const phoneNumber = phoneInput.value.trim();

  if (phoneNumber.startsWith('+91')) {
    const phoneNumberDigits = phoneNumber.substring(3); // Remove the +91 prefix

    const isValid = /^\d{10}$/.test(phoneNumberDigits);

    if (isValid) {
      phoneInput.classList.remove('error');
      phoneError.textContent = '';
    } else {
      phoneInput.classList.add('error');
      phoneError.textContent = 'Please enter a valid phone number with 10 digits';
    }
  } else {
    phoneInput.classList.add('error');
    phoneError.textContent = 'Please enter a phone number starting with +91';
  }
}


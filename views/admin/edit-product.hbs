
<main id="main">
{{>admin-header}}
{{>admin-sidebar}}
    <div id="messageContainer">
    {{#if message}}
    <div class="alert alert-primary d-flex align-items-center mb-4" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:">
            <use xlink:href="#info-fill" />
        </svg>
        <div>
            {{message}}
        </div>
    </div>
    {{/if}}
     </div>

         <!-- Example-->
                <div class="edit-form card mb-4">
                    <div class="card-header justify-content-between align-items-center d-flex">
                        <h6 class="card-title m-0">Add Product</h6>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/{{#if editing}}edit-product{{else}}add-product{{/if}}">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Product Name</label>
                                <input type="text" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Enter the product name" name="title" value="{{#if editing}}{{product.title}}{{/if}}">
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Product Image</label>
                                <input type="file" class="form-control" id="exampleInputPassword1" name="imageUrl" value="{{#if editing}}{{product.imageUrl}}{{/if}}">
                            </div>
                               <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Product Description</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" placeholder="Enter a short description">{{#if editing}}{{product.description}}{{/if}}</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Product Price</label>
                                <input type="number" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Enter the product price" name="price" value="{{#if editing}}{{product.price}}{{/if}}">
                            </div>
                             <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Product Instock</label>
                                <input type="number" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Enter the product stock quantity" name="stock" value={{#if editing}}{{product.stock}}{{else}}1{{/if}}>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Product Category</label>
                             <select class="form-select form-select-sm mb-3" aria-label=".form-select-sm example" name="categoryId" id="category">
                                <option value="" selected>Choose Category...</option>
                                {{!-- <option value={{#if editing}}{{category.name}}{{/if}} selected></option> --}}
                            {{#each categories}}
                            <option value="{{categoryId}}">{{name}}</option>
                            {{/each}}
                            </select>
                            </div>
                            <div class="mt-5">
                                {{#if editing}}
                                 <input type="hidden" name="productId" value="{{product._id}}">
                                {{/if}}
                            <button type="submit" class="btn btn-primary">{{#if editing}}
                        Update Product
                        {{else}}
                        Add Product
                        {{/if}}</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- / Example-->
</main>